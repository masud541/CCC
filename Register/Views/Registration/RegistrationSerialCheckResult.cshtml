@{
    ViewData["Title"] = "Registration";
    Layout = "~/Views/Shared/_landing.cshtml";
}

<div style="float:right; width:50%; text-align:right">
    <img src="~/images/step1.jpg" style="width: 200px; height: 50px; margin-top:15px" />
</div>
<div class="row" style="clear:both">
    <div class="col-md-8 mt-5" style="margin:0px auto">
        <p>
            Please enter your product's serial number
        </p>
        <div class="form-group">
            <input style="width:80%" />
            <a class="btn btn-secondary" type="submit" style="background: #fff;color: #000; height: 28px;line-height:10px;margin-top:-5px" asp-controller="Registration" asp-action="Index">
                Submit
            </a>
        </div>
    </div>
    <div class="col-md-8 mt-5" style="margin:0px auto">
        <hr />
        <p>
            Please enter your product's serial number, click <a asp-action="RegistrationAssistance">here</a>
        </p>
        <hr />
        <p>
            If your product does not have a serial number, click <a href="#">here</a>
        </p>
    </div>
</div>
